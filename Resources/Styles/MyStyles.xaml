<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style TargetType="StackLayout" x:Key="WorkoutCard">
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Gray600}}" />
    </Style>
    <Style TargetType="Label" x:Key="ProfileText">
        <Setter Property="FontSize" Value="18"/>
    </Style>
    <Style TargetType="Label" x:Key="ProfileTitleText" BasedOn="{StaticResource ProfileText}">
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>
</ResourceDictionary>
