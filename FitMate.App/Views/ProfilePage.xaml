<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FitMate.ViewModels"
             xmlns:m="clr-namespace:FitMate.Models;assembly=FitMate.DataBase"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="FitMate.Views.ProfilePage" x:DataType="vm:ProfileViewModel">
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid RowDefinitions="Auto, Auto, Auto, *" Margin="10" RowSpacing="10">
            <Grid Grid.Row="0" ColumnDefinitions="Auto, *" ColumnSpacing="20">
                <Border Grid.Column="0" HeightRequest="125" WidthRequest="125">
                    <Image Aspect="AspectFit" Source="user_placeholder.png" HeightRequest="125" WidthRequest="125" />
                </Border>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Text="Username" Style="{StaticResource ProfileTitleText }" />
                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding User.UserName}"
                           Style="{StaticResource ProfileText }" />

                    <Label Grid.Row="1" Grid.Column="0" Text="Age" Style="{StaticResource ProfileTitleText }" />
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding User.Age}"
                           Style="{StaticResource ProfileText }" />

                    <Label Grid.Row="2" Grid.Column="0" Text="Gender" Style="{StaticResource ProfileTitleText}" />
                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding User.GenderType}"
                           Style="{StaticResource ProfileText }" />

                    <Label Grid.Row="3" Grid.Column="0" Text="Share PRs" Style="{StaticResource ProfileTitleText}" />
                    <CheckBox Grid.Row="3" Grid.Column="1" 
                              IsChecked="{Binding User.SharePR}"
                              IsEnabled="{Binding IsOwnProfile}"
                              CheckedChanged="OnShowPRToggle"/>
                </Grid>
            </Grid>
            <BoxView Grid.Row="1" Color="{StaticResource Primary}" HeightRequest="2" />
            <Label Grid.Row="2" Text="Personal Records" Style="{StaticResource Headline}" />
            <ScrollView Grid.Row="3" IsVisible="{Binding IsSharingPR}">
                <CollectionView ItemsSource="{Binding PersonalRecords}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="m:Exercise">
                            <Border Style="{StaticResource CardBorder}">
                                <StackLayout Style="{StaticResource Card}">
                                    <Label Text="{Binding ExerciseType.Name}" FontSize="22" />
                                    <Label Text="{Binding .}" FontSize="15" />
                                </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
            <Label Grid.Row="3"
                   Text="This person is not sharing their personal records"
                   FontSize="18"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   IsVisible="{Binding IsSharingPR, Converter={StaticResource InvertedBoolConverter}}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>