<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FitMate.ViewModels"
             xmlns:m="clr-namespace:FitMate.Models;assembly=FitMate.DataBase"
             x:Class="FitMate.Views.AllExercisesPage">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto, *, Auto" RowSpacing="10" Margin="10">
            <!-- TODO: add a search bar -->
            <SearchBar Grid.Row="0"
                       Background="{StaticResource SecondaryDarkText}"
                       TextChanged="OnTextChanged" />
            <ScrollView Grid.Row="1" x:DataType="vm:AllExercisesViewModel">
                <CollectionView x:Name="list"
                                ItemsSource="{Binding ExerciseTypes}"
                                IsGrouped="true"
                                SelectionMode="Single"
                                SelectionChanged="OnExerciseSelected">
                    <CollectionView.GroupHeaderTemplate>
                        <DataTemplate x:DataType="vm:ExerciseTypeGroup">
                            <Label Text="{Binding Name}"
                                   FontSize="17"
                                   BackgroundColor="{StaticResource Primary}"
                                   Padding="5" />
                        </DataTemplate>
                    </CollectionView.GroupHeaderTemplate>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="m:ExerciseType">
                            <Label Text="{Binding Name}" VerticalOptions="Center" HorizontalOptions="Fill" Padding="5"
                                   FontSize="15" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
            <Button Grid.Row="2" Text="Create new exercise preset" Clicked="OnCreateNewExercisePreset" />
        </Grid>
    </ContentPage.Content>
</ContentPage>